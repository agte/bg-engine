{
  "name": "@agte/bg-engine",
  "version": "0.0.1",
  "description": "Basic engine for boardgames",
  "type": "module",
  "main": "./src/Game.js",
  "exports": {
    "./Player": "./src/Player.js",
    "./Players": "./src/Players.js"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "eslint --fix .",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agte/bg-engine.git"
  },
  "keywords": [
    "board",
    "game"
  ],
  "author": {
    "name": "Anna Agte",
    "email": "matiasrustagte@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/agte/bg-engine/issues"
  },
  "homepage": "https://github.com/agte/bg-engine#readme",
  "dependencies": {
    "@agte/type": "git+ssh://git@github.com/agte/type.git#v0.0.3"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.5.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "esm": "^3.2.25"
  },
  "engines": {
    "node": ">=12.4.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "airbnb-base",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages"
      ]
    }
  },
  "ava": {
    "require": [
      "esm"
    ],
    "testOptions": {
      "presets": [
        [
          "module:ava/stage-4",
          {
            "modules": false
          }
        ]
      ]
    },
    "babel": false,
    "compileEnhancements": false
  }
}
